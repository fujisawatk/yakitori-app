<div class="sign">
  <div class="sign-card">
    <h2 class="sign-title">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%# <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" > 
        <%= f.label :nickname, class: "label" %>
        <%= f.text_field :nickname, placeholder: "  50文字以下" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:nickname)[0] if @user.errors.any? %>
        </p>
      </div>

      <div class="field"> 
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, placeholder: "  PC・携帯どちらでも可", autocomplete: "email" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:email)[0] if @user.errors.any? %>
        </p>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, placeholder: "  7文字以上20文字以下", autocomplete: "new-password" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:password)[0] if @user.errors.any? %>
        </p>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, placeholder: "  7文字以上20文字以下",  autocomplete: "new-password" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:password_confirmation)[0] if @user.errors.any? %>
        </p>
      </div>

      <%= render "devise/shared/links" %>

      <div class="actions">
        <%= f.submit "Sign up", class: "sign-button" %>
      </div>

      <%= link_to user_twitter_omniauth_authorize_path, method: :post, class: "button is-info is-rounded" do %>
        <i class="fab fa-twitter"></i>
        <span>twitterで登録</span>
      <% end %>
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "button is-rounded" do %>
        <i class="fab fa-google"></i>
        <span>googleで登録</span>
      <% end %>
      
    <% end %>
  </div>
</div>

