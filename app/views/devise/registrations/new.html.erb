<div class="sign">
  <div class="sign-card">
    <h2 class="sign-title">メールで新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field" > 
        <%= f.label :nickname, class: "label" %>
        <%= f.text_field :nickname, placeholder: "  50文字以下" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:nickname)[0] if @user.errors.any? %>
        </p>
      </div>

      <div class="field"> 
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, placeholder: "  PC・携帯どちらでも可", autocomplete: "email" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:email)[0] if @user.errors.any? %>
        </p>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, placeholder: "  7文字以上20文字以下", autocomplete: "new-password" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:password)[0] if @user.errors.any? %>
        </p>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, placeholder: "  7文字以上20文字以下",  autocomplete: "new-password" %>
        <p class="error">
          <%= @user.errors.full_messages_for(:password_confirmation)[0] if @user.errors.any? %>
        </p>
      </div>

      <%= render "devise/shared/links" %>

      <div class="actions">
        <%= f.submit "新規登録", class: "sign-button" %>
      </div>
      
    <% end %>
  </div>
</div>

