<div class="post-card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content">
    <p class="title is-5">
      <%= post.title %>
    </p>
    <div class="content">
      <%= post.body %>
    </div>
  </div>
</div>