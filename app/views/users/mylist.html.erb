<%= render 'shared/header' %>

<%= render 'shared/sidebar' %>

<%= render 'users/upperbar' %>

<div class="tabs is-centered" id="tabs">
  <ul>
    <li class="is-active"><%= link_to "マイリスト", mylist_user_path(@user) %></li>
    <li><%= link_to "コメント", mycomment_user_path(@user) %></li>
    <li><%= link_to "いいね", myliked_user_path(@user) %></li>
  </ul>
</div>

<%= render 'layouts/notifications' %>

<div class="mylist">
  <div id="modal-section"></div>
  <%= render partial: 'shared/post', collection: @posts %>
</div>

<%= paginate @posts %>

<%= render 'shared/footer' %>